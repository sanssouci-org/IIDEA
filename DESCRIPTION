Package: IIDEA
Title: Interactive Inference for Differential Expression Analyses
Version: 0.0.1.0
Authors@R: c(
    person("Nicolas", "Enjalbert Courrech",
    		 email = "nicolas.enjalbert-courrech@math.univ-toulouse.fr",
		 role = c("aut", "cre")),
    person("Pierre", "Neuvial",
    		 role=c("aut"),
